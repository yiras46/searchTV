<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mazaira.searchtv">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_search_tv_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_search_tv_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SearchTV"
        android:name=".SearchTvApplication">
        <activity
            android:name=".usecases.home.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".usecases.launch.LaunchActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>